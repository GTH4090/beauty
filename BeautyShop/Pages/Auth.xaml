<Page x:Class="BeautyShop.Pages.Auth"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BeautyShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <GroupBox Header="Код">
                <TextBox x:Name="CodeTbx"/>
                
            </GroupBox>
            <Button x:Name="OkBtn" Content="Войти" Click="OkBtn_Click"/>
            <Button x:Name="ClientBtn" Content="Войти как клиент" Click="ClientBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
